# Backend security and connectivity
AUTH_ENABLED=true
JWT_PRIVATE_KEY=replace-with-strong-secret
JWT_ISSUER=nexus-backend
JWT_AUDIENCE=nexus-clients
JWT_DEFAULT_SCOPES=jobs:create jobs:read chat:invoke gemini:invoke
GEMINI_API_KEY=replace-with-google-gemini-key
UPLOAD_ENCRYPTION_KEY=replace-with-32-byte-key
UPLOAD_ENCRYPTION_REQUIRED=false
JOB_TTL_SECONDS=604800
CHAT_CACHE_TTL_SECONDS=900
REDIS_URL=redis://localhost:6379
REDIS_TLS=false
REDIS_TLS_CA_FILE=
REDIS_TLS_CERT_FILE=
REDIS_TLS_KEY_FILE=
REDIS_TLS_REJECT_UNAUTHORIZED=true
WEAVIATE_URL=http://localhost:8080
WEAVIATE_FORCE_TLS=false
WEAVIATE_TLS_CA_FILE=
WEAVIATE_TLS_REJECT_UNAUTHORIZED=true

# Frontend defaults
VITE_BFF_API_URL=http://localhost:3001
VITE_NEXUS_AUTH_TOKEN=<paste-token-from-token-generator>
VITE_BFF_PORT=8000
